// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
  //   mysql://USER:PASSWORD@HOST:PORT/DATABASE
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  name     String?
  address  String?
  school   String?
  major    String?
  course   Course? // @relation(fields: [courseId, name, professor, location], references: [id])
  posts    Post[]
}

model Course {
  id        Int    @id @default(autoincrement()) // Primary key for Course
  studentId Int 
  name      String
  professor String
  location  String
  users     User[] @relation(fields: [studentId], references[id]) // Opposite relation field for `User.course`
}

model Post {
  id        Int     @id @default(autoincrement())
  title     String
  content   String?
  published Boolean @default(false)
  author    User    @relation(fields: [authorId], references: [id])
  authorId  Int
}
